<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="csci2020u.lab10.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label text="Username:" GridPane.rowIndex="0"/>
    <TextField fx:id="usrTxtF" promptText="Username" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Message:" GridPane.rowIndex="1"/>
    <TextField fx:id="msgTxtF" promptText="Message" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button text="Send" GridPane.rowIndex="2" onAction="#send"/>
    <Button text="Exit" GridPane.rowIndex="3" onAction="#exit"/>
</GridPane>